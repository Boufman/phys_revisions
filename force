            ['#','C','E','N','T','R','E','O','F','G','R','A','V','I','T','Y'],
            ['#','#','#','#','#','E','#','#','#','#','#','#','#'],
            ['#','#','#','#','#','D','#','#','#','#','#','#','#'],
            ['#','#','G','R','A','V','I','T','Y','#','#','#','#'],
            ['#','#','#','#','#','#','#','#','#','#','#','#','#'],
            ['#','#','#','#','N','E','W','T','O','N','#','#','#'],
            ['#','#','#','#','#','#','#','#','#','#','#','#','#'],
            ['#','#','#','B','E','N','D','#','M','A','S','S','#']
        ];

        const answers = {
            'across': {
                1: 'FORCE',
                4: 'MASS',
                6: 'CENTREOFGRAVITY', 
                9: 'GRAVITY',
                11: 'NEWTON',
                12: 'BEND',
                13: 'MASS'
            },
            'down': {
                1: 'NEWTON',
                2: 'PELVIS',
                3: 'FALL',
                5: 'MOON',
                7: 'SQUARED',
                8: 'BALANCE',
                10: 'TWIST'
            }
        };

        const gridLayout = [
            [1,'#','#',4,'#','#','#','#','#','#','#','#','#'],
            [2,'#','#','#','#','#','#','#','#','#','#','#','#'],
            ['#','#','#','#','#','#','#','#','#','#','#','#','#'],
            ['#','#',3,'#','#',5,'#','#','#','#','#','#','#'],
            ['#','#','#','#','#','#','#','#','#','#','#','#','#'],
            ['#','#','#','#','#',6,'#','#','#','#','#','#','#'],
            ['#','#','#','#','#','#',7,'#','#','#','#','#','#'],
            ['#','#','#','#','#','#','#',8,'#','#','#','#','#'],
            ['#','#','#','#','#','#',9,'#','#','#','#','#','#'],
            ['#','#','#','#','#','#','#','#','#','#','#','#','#'],
            ['#','#','#',10,'#','#','#','#',11,'#','#','#','#'],
            ['#','#','#','#','#','#','#','#','#','#','#','#','#'],
            ['#','#','#','#','#','#',12,'#','#',13,'#','#','#']
        ];

        // Simplified grid for this crossword
        const actualGrid = [
            [1,'','','4','','','','','','','','',''],
            ['','','','','','','','','','','','',''],
            ['','','',3,'','','','','','','','',''],
            ['','','','','','5,'','','','','','',''],
            ['','','','','','','','','','','','',''],
            ['','','','','','6','','','','','','',''],
            ['','','','','','','7','','','','','',''],
            ['','','','','','','','8','','','','',''],
            ['','','','','','',9,'','','','','',''],
            ['','','','','','','','','','','','',''],
            ['','',10,'','','','','','11','','','',''],
